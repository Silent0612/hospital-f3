></router-view>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'App',\r\n  methods: {\r\n    logout() {\r\n      this.$store.commit('user/CLEAR_USER_INFO')\r\n      this.$router.push('/login')\r\n      this.$message.success('退出登录成功')\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n#app {\r\n  font-family: 'Microsoft YaHei', Helvetica, Arial, sans-serif;\r\n  -webkit-font-smoothing: antialiased;\r\n  -moz-osx-font-smoothing: grayscale;\r\n  color: #2c3e50;\r\n  height: 100vh;\r\n  display: flex;\r\n}\r\n\r\n* {\r\n  margin: 0;\r\n  padding: 0;\r\n  box-sizing: border-box;\r\n}\r\n\r\nhtml, body {\r\n  height: 100%;\r\n}\r\n\r\n.sidebar {\r\n  width: 200px;\r\n  height: 100%;\r\n  background-color: #304156;\r\n  color: #fff;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.logo {\r\n  height: 60px;\r\n  line-height: 60px;\r\n  text-align: center;\r\n  font-size: 18px;\r\n  font-weight: bold;\r\n  border-bottom: 1px solid #1f2d3d;\r\n}\r\n\r\n.nav-menu {\r\n  flex: 1;\r\n  border: none;\r\n  background-color: transparent;\r\n}\r\n\r\n.nav-menu .el-menu-item {\r\n  color: #fff;\r\n}\r\n\r\n.nav-menu .el-menu-item:hover,\r\n.nav-menu .el-menu-item.is-active {\r\n  background-color: #263445;\r\n}\r\n\r\n.nav-menu .el-menu-item i {\r\n  color: #fff;\r\n  margin-right: 10px;\r\n}\r\n\r\n.user-info {\r\n  padding: 15px;\r\n  border-top: 1px solid #1f2d3d;\r\n  text-align: center;\r\n}\r\n\r\n.user-info span {\r\n  display: block;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.user-info .el-button--text {\r\n  color: #fff;\r\n}\r\n\r\n.main-content {\r\n  flex: 1;\r\n  padding: 20px;\r\n  overflow-y: auto;\r\n}\r\n</style>\r\n"],"mappings":";AA+CA;EACAA,IAAA;EACAC,OAAA;IACAC,MAAA,WAAAA,OAAA;MACA,KAAAC,MAAA,CAAAC,MAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;MACA,KAAAC,QAAA,CAAAC,OAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}